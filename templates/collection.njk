{% extends "default.njk" %}

{% block content %}
{{ content }}
<h2>Pieces in this Collection</h2>
<div class="list">
	<ul>
		{% set sortedPages = site.pages %}
		{% for p in sortedPages %}
		{% if p.poem_collection %}
		{% if p.poem_collection == page.collection_name %}
		<li><a href="/{{ site.baseUrl }}/{{ p.location }}">{{ p.title }} (<span class="date">{{ p.date}}</span>)</a>
		</li>
		{% endif %}
		{% endif %}
		{% endfor %}
	</ul>
</div>
{% endblock %}